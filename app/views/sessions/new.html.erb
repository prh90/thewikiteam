<% if @error %>
<%= @error %>
<% end %>

    <div class="login-clean">
        	<%= form_tag(sessions_path, method:'post') do |f| %>
            <h2 class="sr-only">Login Form</h2>
            <div class="illustration"><img src="https://s3.amazonaws.com/codementor_content/2016-Aug/04.png" width="200" /></div>
            <div class="form-group">
                <%= text_field_tag 'user[email]', nil, class: 'form-control', placeholder: "Email" %>
            </div>
            <div class="form-group">
                 <%= password_field_tag 'user[:password]', nil, class: 'form-control',placeholder: "Password" %>
            </div>
            <div class="form-group">
                <%= submit_tag("Log In", class: "btn btn-info btn-block") %>
            </div><% end %>
    </div>
